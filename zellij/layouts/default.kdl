layout {
    default_tab_template {
        // Pill-style tab bar using zjstatus
        pane size=1 borderless=true {
            plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
                format_left  "{mode}{tabs}"
                format_right "{session}"
                format_space "#[bg=#1e1e1e]"

                hide_frame_for_single_pane "false"

                // Text labels - normal mode hidden
                mode_normal        ""
                mode_locked        "#[fg=#f14c4c,bg=#1e1e1e]#[fg=#1e1e1e,bg=#f14c4c,bold] LOCKED #[fg=#f14c4c,bg=#1e1e1e] "
                mode_pane          "#[fg=#d670d6,bg=#1e1e1e]#[fg=#1e1e1e,bg=#d670d6,bold] PANE #[fg=#d670d6,bg=#1e1e1e] "
                mode_tab           "#[fg=#29b8db,bg=#1e1e1e]#[fg=#1e1e1e,bg=#29b8db,bold] TAB #[fg=#29b8db,bg=#1e1e1e] "
                mode_resize        "#[fg=#f5f543,bg=#1e1e1e]#[fg=#1e1e1e,bg=#f5f543,bold] RESIZE #[fg=#f5f543,bg=#1e1e1e] "
                mode_scroll        "#[fg=#11a8cd,bg=#1e1e1e]#[fg=#1e1e1e,bg=#11a8cd,bold] SCROLL #[fg=#11a8cd,bg=#1e1e1e] "
                mode_session       "#[fg=#23d18b,bg=#1e1e1e]#[fg=#1e1e1e,bg=#23d18b,bold] SESSION #[fg=#23d18b,bg=#1e1e1e] "
                mode_default_to_mode "normal"

                // Two-tone pill tabs: ( index | name )
                tab_normal              "#[fg=#3a3d41,bg=#1e1e1e]#[fg=#cccccc,bg=#3a3d41,bold] {index} #[fg=#3a3d41,bg=#2d2d2d]#[fg=#999999,bg=#2d2d2d] {name} #[fg=#2d2d2d,bg=#1e1e1e] "
                tab_active              "#[fg=#3b8eea,bg=#1e1e1e]#[fg=#1e1e1e,bg=#3b8eea,bold] {index} #[fg=#3b8eea,bg=#3a3d41]#[fg=#e5e5e5,bg=#3a3d41,bold] {name} #[fg=#3a3d41,bg=#1e1e1e] "
                tab_fullscreen_indicator "□"
                tab_sync_indicator       ""
                tab_floating_indicator   "󰉈"

                session "#[fg=#23d18b,bg=#1e1e1e]#[fg=#1e1e1e,bg=#23d18b,bold] {name} #[fg=#23d18b,bg=#1e1e1e]"
            }
        }
        children
        // Default status bar at bottom
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="main" focus=true {
        pane
    }
}
